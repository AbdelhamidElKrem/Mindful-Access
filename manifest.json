{
    "manifest_version": 3,
    "name": "Taqwa Timekeeper",
    "version": "1.0.0",
    "default_locale": "en",
    "description": "__MSG_appDesc__",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "alarms",
        "tabs",
        "activeTab",
        "webNavigation",
        "geolocation",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://api.aladhan.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "intention.html",
                "icons/icon128.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}